<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mentalwellnessfocusapp.MainController" spacing="24" alignment="TOP_CENTER" style="-fx-background-color: #f5f5f5;" prefWidth="360" prefHeight="640">

    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>

    <!-- Top bar: sandwich button + title -->
    <HBox spacing="12" alignment="TOP_LEFT">
        <Button fx:id="menuButton" text="â‰¡" onAction="#onMenuClicked" style="-fx-font-size: 18px;
                -fx-background-color: transparent;
                -fx-text-fill: #333333;" />
    </HBox>

    <Label fx:id="welcomeText" alignment="CENTER" textAlignment="CENTER" wrapText="true" maxWidth="300" text="Welcome to your Mental Wellness Focus App! ðŸŒ±" style="-fx-font-size: 26px; 
            -fx-font-weight: bold;"/>

    <!-- 2x2 Grid of Rounded Tiles -->
    <GridPane fx:id="titleGrid" hgap="20" vgap="20" alignment="CENTER" prefWidth="310" prefHeight="384">

        <!-- Focus Session -->
        <StackPane fx:id="focusTile" GridPane.rowIndex="0" GridPane.columnIndex="0" onMouseClicked="#onFocusSession" prefWidth="160" prefHeight="160" style="-fx-background-color: linear-gradient(#a9e37a, #6ac352);
                          -fx-background-radius: 28;
                          -fx-border-radius: 28;
                          -fx-border-color: rgba(0,0,0,0.15);
                          -fx-border-width: 2;
                          -fx-padding: 18;">
            <VBox alignment="CENTER" spacing="8" fillWidth="true">
                <ImageView fitWidth="72" fitHeight="72" preserveRatio="true">
                    <image>
                        <Image url="@icons/focus.png"/>
                    </image>
                </ImageView>
                <Label text="Focus Session" wrapText="true" textAlignment="CENTER" maxWidth="130" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
        </StackPane>

        <!-- Breathing Exercises -->
        <StackPane fx:id="breathingTile" GridPane.rowIndex="0" GridPane.columnIndex="1" onMouseClicked="#onBreathingExercises" prefWidth="160" prefHeight="160" style="-fx-background-color: linear-gradient(#c59af7, #9963e3);
                          -fx-background-radius: 28;
                          -fx-border-radius: 28;
                          -fx-border-color: rgba(0,0,0,0.15);
                          -fx-border-width: 2;
                          -fx-padding: 18;">
            <VBox alignment="CENTER" spacing="8" fillWidth="true">
                <ImageView fitWidth="72" fitHeight="72" preserveRatio="true">
                    <image>
                        <Image url="@icons/breathing.png"/>
                    </image>
                </ImageView>
                <Label text="Breathing Exercises" wrapText="true" textAlignment="CENTER" maxWidth="130" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
        </StackPane>

        <!-- Journal Entry -->
        <StackPane fx:id="journalTile" GridPane.rowIndex="1" GridPane.columnIndex="0" onMouseClicked="#onJournalEntry" prefWidth="160" prefHeight="160" style="-fx-background-color: linear-gradient(#8fd8ff, #5ab4f5);
                          -fx-background-radius: 28;
                          -fx-border-radius: 28;
                          -fx-border-color: rgba(0,0,0,0.15);
                          -fx-border-width: 2;
                          -fx-padding: 18;">
            <VBox alignment="CENTER" spacing="8" fillWidth="true">
                <ImageView fitWidth="72" fitHeight="72" preserveRatio="true">
                    <image>
                        <Image url="@icons/journal.png"/>
                    </image>
                </ImageView>
                <Label text="Journal Entry" wrapText="true" textAlignment="CENTER" maxWidth="130" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
        </StackPane>

        <!-- Progress Streaks -->
        <StackPane fx:id="streakTile" GridPane.rowIndex="1" GridPane.columnIndex="1" onMouseClicked="#onProgressStreaks" prefWidth="160" prefHeight="160" style="-fx-background-color: linear-gradient(#ffd27b, #ffb347);
                          -fx-background-radius: 28;
                          -fx-border-radius: 28;
                          -fx-border-color: rgba(0,0,0,0.15);
                          -fx-border-width: 2;
                          -fx-padding: 18;">
            <VBox alignment="CENTER" spacing="8" fillWidth="true">
                <ImageView fitWidth="72" fitHeight="72" preserveRatio="true">
                    <image>
                        <Image url="@icons/streaks.png"/>
                    </image>
                </ImageView>
                <Label text="Progress Streaks" wrapText="true" textAlignment="CENTER" maxWidth="130" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
        </StackPane>

    </GridPane>

</VBox>